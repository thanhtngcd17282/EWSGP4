@model List<EWSApplication.DataLayers.Common.StructureAccountToRender>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/bundles/table")

<main>

    <h2>List of accounts <small>table useraccount</small></h2>
    <a href="@Url.Action("tag","Manager")">Table tags...</a>
    <a class="post_project" href="#" title="">Create</a>
    <ul class="responsive-table">
        <li class="table-header">
            <div class="col col-1">User Id</div>
            <div class="col col-2">User Name</div>
            <div class="col col-3">email</div>
            <div class="col col-4">faculty</div>
            <div class="col col-5">role</div>
            <div class="col col-6"></div>
        </li>
        @foreach (var acc in Model)
        {
            <li class="table-row">
                <div class="col col-1" data-label="User Id">@acc.userid</div>
                <div class="col col-2" data-label="User Name">@acc.username</div>
                <div class="col col-3" data-label="Email">@acc.email</div>
                <div class="col col-4" data-label="faculty">@acc.facultyname</div>
                <div class="col col-5" data-label="role">@acc.rolename</div>
                <div class="col col-6" data-label="action"><a id="btn" href="@Url.Action("deleteaccount","manager", new { id=acc.userid})">X</a></div>
            </li>

        }
    </ul>
    <div class="post-popup pst-pj current animated fadeIn">
        <div class="post-project current">
            <h3>New Account</h3>
            <div class="post-project-fields">
                <form action="@Url.Action("Register","home")" method="post">
                    <div class="row">
                        <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                                <input type="text" name="username" placeholder="Full Name">
                                <i class="far fa-user"></i>
                            </div>
                        </div>
                        <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                                <input type="text" name="email" placeholder="Email">
                                <i class="fas fa-globe-asia"></i>
                            </div>
                        </div>
                        <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                                <select name="roleid">
                                    <option value="2">Student</option>
                                    <option value="3">Staff</option>
                                    @*<option value="4">Student</option>
                                    <option value="3">Staff</option>*@
                                </select>
                                <i class="fab fa-dropbox"></i>
                                <span><i class="fa fa-ellipsis-h"></i></span>
                            </div>
                        </div>
                        <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                                <select name="facultyid">
                                    <option value="1">Tin</option>
                                    <option value="2">Toán</option>
                                </select>
                                <i class="fab fa-dropbox"></i>
                                <span><i class="fa fa-ellipsis-h"></i></span>
                            </div>
                        </div>
                        <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                                <input type="password" name="password" placeholder="Password">
                                <i class="fas fa-shield-alt"></i>
                            </div>
                        </div>
                        <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                                <input type="password" name="repeat-password" placeholder="Repeat Password">
                                <i class="fas fa-shield-alt"></i>
                            </div>
                        </div>
                        <div class="col-lg-12 no-pdd">
                            <div class="checky-sec st2">
                                <div class="fgt-sec">
                                    <input type="checkbox" checked name="cc" id="c2">
                                    <label for="c2">
                                        <span></span>
                                    </label>
                                    <small>Yes, I understand and agree to the workwise Terms &amp; Conditions.</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 no-pdd">
                            <button type="submit" value="submit">Get Started</button>
                        </div>
                    </div>
                </form>
            </div>

            <a href="#" title=""><i class="far fa-times-circle"></i></a>
        </div>
        </div>
</main>

